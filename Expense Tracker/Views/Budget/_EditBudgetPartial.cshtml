@model Expense_Tracker.ViewModels.BudgetViewModel

<form id="editBudgetForm" asp-action="UpdateBudget" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" name="BudgetId" value="@Model.BudgetId" />

   @*  <!-- Category Dropdown -->
