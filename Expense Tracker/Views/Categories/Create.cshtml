@model Expense_Tracker.Models.Category

@{
    ViewData["Title"] = "Create";
}

<div class="bg-secondary bg-opacity-10">
    <div class="container">
        <h4>Add New Category - Admin</h4>
    </div>
</div>



<div class="container  py-5">

    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <div class="d-flex">
                    <div class="form-check me-3">
                        <input type="radio" class="form-check-input" name="Type" id="option1" value="Expense" 
                               @(Model.Type == "Expense" ? "checked" : "") />
                        <label class="form-check-label" for="option1">Expense</label>
                    </div>
                    <div class="form-check">
                        <input type="radio" class="form-check-input" name="Type" id="option2" value="Income" 
                               @(Model.Type == "Income" ? "checked" : "") />
                        <label class="form-check-label" for="option2">Income</label>
                    </div>
                </div>
            </div>

            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" id="title" name="Title" placeholder="Title" value="@Model.Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label for="icon" class="form-label">Description</label>
                <input type="text" id="description" name="Description" placeholder="Description" value="@Model.Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>

        <div class="mt-3">
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </div>
</div>


<script>
    document.addEventListener("DOMContentLoaded", function () {
        const iconSelect = document.getElementById('icon');
        const selectedIcon = document.getElementById('selected-icon');

        iconSelect.addEventListener('change', function () {
            const iconClass = this.value;
            selectedIcon.className = iconClass; // Update the icon displayed in the input group
        });

        // Trigger change event on page load to display the selected icon if any
        iconSelect.dispatchEvent(new Event('change'));
    });
</script>




@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
